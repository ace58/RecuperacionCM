<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:id="@+id/cardViewVehiculos"
    card_view:cardCornerRadius="5dp"
    android:orientation='vertical'
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation='vertical'>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_marca"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/marca_adapter"
                android:textColor="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/v_marca"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_modelo"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/modelo_adapter"
                android:textColor="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/v_modelo"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_matricula"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/matricula_adapter"
                android:textColor="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/v_matricula"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_precio"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/precio_adapter"
                android:textColor="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/v_precio"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_seleccionar_vehiculo"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:autoSizeMaxTextSize="@dimen/cardview_compat_inset_shadow"
                android:text="@string/btn_seleccionar_veh"
                android:textColor="@color/yellow" />

            <Button
                android:id="@+id/btn_detalles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/btn_ver_detalles"
                android:textColor="@color/yellow" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>